    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "cwd": "${workspaceFolder}",
            "env": {
                "FLASK_APP": "app/lowcode_llm/webapp.py",
                "FLASK_DEBUG": "1",
                "PYTHONPATH": ".",
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--host", "0.0.0.0",
                "--port", "8000",
            ],
            "jinja": true,
            "justMyCode": false
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": ".",
            },
            "args": [
                // "--do-share"
                // "--no-save-on-exit",
                // "--config-dir=${workspaceFolder}/conf",
                // "--max-batches=1",
                // "--max-epoch=1",
                // "--resume-file=data/trainer-debug.gz",
            ],
            "justMyCode": false
        },
        {
            "name": "webapi: fastapi",
            "type": "python",
            "request": "launch",
            "module": "webapi",
            "justMyCode": false
        },
    ]
}